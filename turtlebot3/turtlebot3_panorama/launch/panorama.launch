<launch>
  <!-- Camera Image Transport to raw-->
  <node pkg="image_transport" type="republish" name="republish" output="screen" args="compressed in:=/usb_cam/image_raw raw out:=/usb_cam/image_raw" />

  <node pkg="turtlebot3_panorama" type="turtlebot3_panorama" name="turtlebot3_panorama" respawn="false" output="screen">
    <param name="default_mode" value="1"/>
    <param name="default_pano_angle" value="6.28318530718"/> <!-- 2 * Pi -->
    <param name="default_snap_interval" value="2.0"/>
    <param name="default_rotation_velocity" value="0.3"/>
    <param name="camera_name" value="usb_cam"/>
    <param name="bag_location" value="/tmp/turtlebot3_panorama.bag"/>   
  </node>
</launch>
