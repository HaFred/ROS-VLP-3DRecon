<launch>
  <!-- Camera Image Transport to raw, needs to include this node here otherwise imageCb can't be activated in rpcd node --> I
  <node pkg="image_transport" type="republish" name="republish" output="screen" args="compressed in:=/usb_cam/image_raw raw out:=/usb_cam/image_raw" />
  <!-- NOTE that the type here needs to be changed as robot_spinning, rather than image_with_pose, otherwise this launch file will be directed to image_with_pose.cpp-->
  <node pkg="robot_spinning_cap_data" type="robot_spinning_cap_data" name="robot_spinning_cap_data" respawn="false" output="screen">
    <param name="default_mode" value="0"/>
    <param name="default_pano_angle" value="6.28318530718"/> <!-- 2 * Pi, degree for de_snap_int -->
    <param name="default_snap_interval" value="5.0"/> 
    <param name="default_rotation_velocity" value="0.09"/>
    <param name="camera_name" value="usb_cam"/>
    <param name="bag_location" value="/tmp/robot_spinning_cap_data/robot_spinning_cap_data.bag"/>   
  </node>
</launch>
